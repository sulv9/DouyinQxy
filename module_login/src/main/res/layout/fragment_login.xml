<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_iv_app_icon"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_tiktok"
        app:layout_constraintBottom_toBottomOf="@id/login_tv_welcome_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_tv_app_name" />

    <TextView
        android:id="@+id/login_tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="@string/login_tv_text_app_name"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@id/login_iv_app_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_tv_welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_text_welcome_back"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/login_tv_app_name"
        app:layout_constraintTop_toBottomOf="@id/login_tv_app_name" />

    <TextView
        android:id="@+id/login_tv_not_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_text_not_login"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_tv_go_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_view_with_gray_border"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/login_tv_text_go_login"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/login_tv_not_login"
        app:layout_constraintStart_toStartOf="@id/login_tv_not_login"
        app:layout_constraintTop_toBottomOf="@id/login_tv_not_login" />

</androidx.constraintlayout.widget.ConstraintLayout>