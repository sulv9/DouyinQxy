<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rank_item_iv_poster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/rank_item_iv_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_item_tv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name"
        app:layout_constraintTop_toBottomOf="@id/rank_item_tv_name" />

    <TextView
        android:id="@+id/rank_item_tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_tags"
        app:layout_constraintTop_toBottomOf="@id/rank_item_tv_tags" />

    <TextView
        android:id="@+id/rank_item_tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/rank_item_iv_poster"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name" />

    <TextView
        android:id="@+id/rank_item_tv_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_rank_btn_buy_ticket"
        android:paddingStart="21dp"
        android:paddingTop="8dp"
        android:paddingEnd="21dp"
        android:paddingBottom="8dp"
        android:text="@string/rank_item_tv_text_buy_ticket"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rank_item_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name"
        app:layout_constraintTop_toBottomOf="@id/rank_item_iv_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>