<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rank_item_iv_poster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/rank_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rank_item_iv_poster"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/rank_item_tv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name"
        app:layout_constraintTop_toBottomOf="@id/rank_item_tv_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/rank_item_tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_tags"
        app:layout_constraintTop_toBottomOf="@id/rank_item_tv_tags"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/rank_item_tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name"
        app:layout_constraintBottom_toBottomOf="@id/rank_item_iv_poster"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/rank_item_tv_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/rank_item_tv_text_buy_ticket"/>

    <View
        android:id="@+id/rank_item_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="@id/rank_item_tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rank_item_iv_poster"
        android:background="@color/color_divider_bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>